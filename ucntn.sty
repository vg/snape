\ProvidesPackage{ucntn} 
%~ \RequirePackage{memoir}

\newif\ifallcapsnumtoname
  \allcapsnumtonamefalse

\def\wordCasing#1{\ifallcapsnumtoname \MakeUppercase{#1}\else%
\iflowernumtoname #1\else\MakeUppercase #1\fi\fi}

\def\wordPartCasing#1{\ifallcapsnumtoname \MakeUppercase{#1}\else#1\fi}

\DeclareRobustCommand{\NUMTONAME}[1]{%
  %\showthe#1%
 %~ \typeout{***** #1} 
  \makeordinalfalse%
  \notnumtonameallcapsfalse%
  \lowernumtonamefalse%
  \allcapsnumtonametrue%
  \n@me@number{#1}
  \allcapsnumtonamefalse%
 }

\DeclareRobustCommand{\ORDINALTONAME}[1]{%
  \makeordinaltrue
  \notnumtonameallcapsfalse%
  \lowernumtonamefalse%
  \allcapsnumtonametrue%
  \n@me@number{#1}}
  \allcapsnumtonamefalse%
  
  

